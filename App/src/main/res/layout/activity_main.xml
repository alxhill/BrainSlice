<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lemonslice.brainslice.MainActivity"
    tools:ignore="MergeRootFrame"
    >


    <android.opengl.GLSurfaceView android:id="@+id/openGlView"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        >
        </android.opengl.GLSurfaceView>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:background="@drawable/menu_bg">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/learn_button"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:layout_marginRight="30dp">
            <TextView
                android:id="@+id/learn_button_icon"
                android:gravity="center"
                android:text="@string/learn_icon"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="3dp"/>
            <TextView
                android:id="@+id/learn_button_text"
                android:gravity="center"
                android:text="@string/learn_button_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/visualise_button"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:layout_marginRight="30dp">
            <TextView
                android:id="@+id/visualise_button_icon"
                android:gravity="center"
                android:text="@string/visualise_icon"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="3dp"/>
            <TextView
                android:id="@+id/visualise_button_text"
                android:gravity="center"
                android:text="@string/visualise_button_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="24sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/centre_button"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:layout_marginRight="30dp">
            <TextView
                android:id="@+id/centre_button_icon"
                android:gravity="center"
                android:text="@string/centre_icon"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="3dp"/>
            <TextView
                android:id="@+id/centre_button_text"
                android:gravity="center"
                android:text="Centre"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/overlay_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="false">

    </FrameLayout>

</FrameLayout>
