<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lemonslice.brainslice.MainActivity"
    tools:ignore="MergeRootFrame"
    android:background="#001122">


    <android.opengl.GLSurfaceView android:id="@+id/openGlView"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        >
        </android.opengl.GLSurfaceView>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:background="@drawable/menu_background">
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/help_button"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/help_button_icon"
                android:gravity="center"
                android:text="@string/help_icon"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:textSize="26sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/quiz_button"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:layout_marginLeft="100dp">
            <TextView
                android:id="@+id/quiz_button_icon"
                android:gravity="center"
                android:text="@string/quiz_icon"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="3dp"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/quiz_button_text"
                android:gravity="center"
                android:text="@string/quiz_button_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/learn_button"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:clickable="true">
            <TextView
                android:id="@+id/learn_button_icon"
                android:gravity="center"
                android:text="@string/learn_icon"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="3dp"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/learn_button_text"
                android:gravity="center"
                android:text="@string/learn_button_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/visualise_button"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:layout_marginRight="100dp">
            <TextView
                android:id="@+id/visualise_button_icon"
                android:gravity="center"
                android:text="@string/visualise_icon"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="3dp"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/visualise_button_text"
                android:gravity="center"
                android:text="@string/visualise_button_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="24sp" />
            </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/settings_button"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:layout_marginRight="15dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/settings_button_icon"
                android:gravity="center"
                android:text="@string/settings_icon"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:textSize="26sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:id="@+id/label_overlay"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/volume_icon"
        android:id="@+id/volume_button"
        android:paddingTop="15dp"
        android:paddingRight="15dp"/>

    <FrameLayout
        android:id="@+id/overlay_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="false">
    </FrameLayout>

</FrameLayout>
