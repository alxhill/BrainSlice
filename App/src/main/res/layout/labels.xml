
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/label_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="12"/>

        <RelativeLayout
            android:layout_weight="10"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="50dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:id="@+id/segment_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Temporal Lobe"
                        android:textColor="#ffffff"
                        android:fontFamily="Helvetica Neue"
                        android:typeface="sans"
                        android:textSize="40sp"
                        android:singleLine="true"
                        android:background="@drawable/segment_title"
                        android:shadowColor="#7c9dae"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                    />

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/label_scroll"
                    >
                        <TextView
                        android:id="@+id/segment_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="No description recieved"
                        android:textColor="#ffffff"
                        android:fontFamily="Helvetica Neue"
                        android:typeface="sans"
                        android:textSize="20sp"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="0dp"
                        android:overScrollMode="always"/>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_alignParentBottom="true"
                    >
                    <Button
                        android:id="@+id/questionbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Question"
                        android:layout_gravity="bottom|center"
                        android:gravity="center_vertical"
                    />
                </LinearLayout>
        </RelativeLayout>
</LinearLayout>